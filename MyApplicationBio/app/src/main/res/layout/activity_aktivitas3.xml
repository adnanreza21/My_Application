<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aktivitas.Aktivitas3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluetext"
            android:text="Aktivitas 3 dan 4 - Mengumpulkan data dan menalar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />

        <com.zolad.zoominimageview.ZoomInImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:src="@drawable/gbraktivitas3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:text="Siswa berdiskusi dalam kelompok untuk menjawab pertanyaan-pertanyaan yang ada pada lembar kerja peserta didik yang sudah disiapkan (LKPD) tentang materi Stuktur Organ Sistem Pencernaan yang sudah dipelajari. "
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:text="Setelah mengerjakan dan mengkomunikaskan di depan kelas, siswa mengeklik tombol informasi pada aplikasi android berupa materi Stuktur Organ Sistem Pencernaan dan mencoba memahami."
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btnlanjut"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/button_red"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:text="Lanjutkan"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />
    </LinearLayout>

</ScrollView>